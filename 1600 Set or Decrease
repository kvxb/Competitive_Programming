// https://codeforces.com/problemset/problem/1622/C

#include <algorithm>
#include <bits/stdc++.h>
using namespace std;

int main() {
  ios_base::sync_with_stdio(false);
  cin.tie(nullptr);

  long long t;
  long long ct = 1;
  cin >> t;
  while (t--) {
    long long n, k;
    cin >> n >> k;
    vector<long long> v(n);
    vector<long long> sums(n);
    vector<long long> ans(n);
    long long sum = 0;
    for (long long i = 0; i < n; i++) {
      cin >> v[i];
      sum += v[i];
    }

    if(n == 1) {
        cout << max(v[0]-k, (long long)0) << endl;
        continue;
    }
    sort(v.begin(), v.end());

    sums[n - 1] = v[n - 1] - v[0];
    long long bonus = 2;
    for (long long i = n - 2; i >= 1; i--) {
      sums[i] = v[i] - v[0] + sums[i + 1];
    }
    for (long long i = n - 1; i >= 1; i--) {
      double decrements = ceil(((double)(sum - k - sums[i])) / (bonus * 1.0));
      double sets = n - i;
      ans[i] = max((long long)decrements, (long long)0) + sets;
      bonus++;
    }
    cout << max(min(*min_element(ans.begin() + 1, ans.end()), sum - k), (long long)0) << endl;
  }

  return 0;
}
